<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:system="clr-namespace:System;assembly=netstandard"
             xmlns:prontuarioApp="clr-namespace:ProntuarioApp;assembly=ProntuarioApp"
             x:Class="ProntuarioApp.Views.PatientDetail">
    <ContentPage.Content>
        <StackLayout Padding="30" >
            <Label Text="DADOS DO PACIENTE" TextColor="#000" FontAttributes="Bold"></Label>

            <Label Text="{Binding Nome, StringFormat='Nome: {0:F0}'}"  FontSize="10"></Label>
            <Label Text="{Binding Sexo, StringFormat='Sexo: {0:F0}'}"  FontSize="10"></Label>
            <Label Text="{Binding Idade, StringFormat='Idade: {0:F0}'}"  FontSize="10"></Label>
            <Label Text="{Binding DataNascimento, StringFormat='Data Nascimento: {0:dd/MM/yyyy}'}" FontSize="10"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
